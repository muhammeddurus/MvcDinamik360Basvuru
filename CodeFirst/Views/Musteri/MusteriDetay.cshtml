@model CodeFirst.Models.Class.musteri

@{
    ViewBag.Title = "MusteriDetay";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("guncelle", "Musteri", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.Id)
    @Html.TextBoxFor(m => m.Id, new {  @readonly = "readonly" , @class = "form-control" })

    <br />
    @Html.LabelFor(m => m.Ad)
    @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Ad, "", new { @class = "color:red" })
    <br />
    @Html.LabelFor(m => m.Soyad)
    @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Soyad, "", new { @class = "color:red" })
    <br />
    @Html.LabelFor(m => m.Sehir)
    @Html.TextBoxFor(m => m.Sehir, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Sehir, "", new { @class = "color:red" })
</div>
<div>
    <button class="btn btn-warning">Güncelle</button>
</div>
}

